<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Listagem.InserirDados"
             Title="Lista de clientes"
             Padding="10">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Nome Completo" />
            <Entry Placeholder="Nome Completo"
                   Text="{Binding Nome}"
                   Keyboard="Text"/>
           
            <Label Text="Endereco" />
            <Entry Placeholder="Endereco"                  
                   Text="{Binding End}"
                   Keyboard="Text"/>
            <Label Text="Email do cliente" />
            <Entry Placeholder="Email do cliente"
                   Text="{Binding Email}"
                   Keyboard="Email"/>
            <Label Text="Telefone" />
            <Entry Placeholder="Telefone"
                   Text="{Binding Telefone}"
                   Keyboard="Telephone"/>
            <Button Text="Gravar"
                    BackgroundColor="#6699ff"
                    TextColor="White"                    
                    Command="{Binding GravarCommand}"/>
            <Button Text="Limpar"
                   BackgroundColor="#6699ff"
                   TextColor="White"
                   x:Name="LimparLista"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>